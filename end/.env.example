# 数据库配置
DB_HOST=api-proxy-mysql
DB_PORT=3306
DB_NAME=oauth2_mock
DB_USER=oauth2_user
DB_PASSWORD=oauth2_password_123456
DB_CHARSET=utf8mb4
DB_TIMEZONE=+08:00

# Redis 配置
REDIS_HOST=api-proxy-redis
REDIS_PORT=6379
REDIS_PASSWORD=123456
REDIS_DB=0


# 日志配置
LOG_LEVEL=info
DEBUG_MODE=false

