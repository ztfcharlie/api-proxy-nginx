# 服务配置
NODE_ENV=development
PORT=8889
LOG_LEVEL=debug

# 数据库配置
DB_HOST=api-proxy-mysql
DB_PORT=3306
DB_NAME=oauth2_mock
DB_USER=root
DB_PASSWORD=mysql_password
DB_CHARSET=utf8mb4
DB_TIMEZONE=+08:00

# Redis 配置
REDIS_HOST=api-proxy-redis
REDIS_PORT=6379
REDIS_PASSWORD=123456
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# 加密配置
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_IV=your-16-character-iv

# OAuth2 模拟配置
OAUTH2_ACCESS_TOKEN_EXPIRES=3600
OAUTH2_REFRESH_TOKEN_EXPIRES=86400
OAUTH2_CODE_EXPIRES=600
OAUTH2_ISSUER=http://localhost:8889
OAUTH2_AUDIENCE=api.yourdomain.com

# 服务账号配置
SERVICE_ACCOUNT_EXPIRES_IN=8760h
PRIVATE_KEY_BITS=2048
PRIVATE_KEY_ALGORITHM=RSA

# 缓存配置
CACHE_TTL_ACCESS_TOKEN=3600
CACHE_TTL_REFRESH_TOKEN=86400
CACHE_TTL_CLIENT_TOKEN=1800
CACHE_CLEANUP_INTERVAL=300

# 日志配置
LOG_DIR=../logs/oauth2
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# 安全配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# API 配置
API_PREFIX=/api
ADMIN_PATH=/admin
SWAGGER_PATH=/api-docs

# OpenResty 集成配置
OPENRESTY_HOST=api-proxy-nginx
OPENRESTY_PORT=8080
OPENRESTY_CACHE_SHARED_DICT=oauth2_cache

# 健康检查配置
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# 文件存储配置
CLIENT_ACCOUNT_DIR=../client/google_server_account
TEMP_DIR=../tmp/oauth2
BACKUP_DIR=../backup/oauth2

# 监控配置
ENABLE_METRICS=true
ENABLE_PROFILING=false
METRICS_PORT=9090

# 开发配置
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true