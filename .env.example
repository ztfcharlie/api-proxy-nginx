# Gemini API 代理环境配置文件

# 真实的 Gemini API Key 列表（支持多个Key轮询）
GEMINI_API_KEYS=gemini_key_1,gemini_key_2,gemini_key_3

# Key 轮询策略: round_robin, random, weighted, least_used
KEY_ROTATION_STRATEGY=round_robin

# Key 权重配置（用于weighted策略）
GEMINI_KEY_WEIGHTS=gemini_key_1:1,gemini_key_2:2,gemini_key_3:1

# Key 故障转移配置
KEY_MAX_RETRIES=3
KEY_RETRY_ON_FAILURE=true

# 允许的客户端 API Key 列表（用逗号分隔）
GEMINI_API_KEYS_OLD=client_key_1,client_key_2,client_key_3

# 限流配置
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# 日志配置
LOG_REQUEST_BODY=true
LOG_RESPONSE_BODY=false

# 端口配置
HTTP_PORT=8080
HTTPS_PORT=8443

# Redis 配置（可选）
REDIS_HOST=api-proxy-redis
REDIS_PORT=6379
REDIS_PASSWORD=

# 时区设置
TZ=Asia/Shanghai